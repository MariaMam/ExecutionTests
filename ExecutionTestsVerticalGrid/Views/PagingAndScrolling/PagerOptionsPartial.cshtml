@model PagerDemoOptions

@using (Html.BeginForm()) {
    @Html.DevExpress().FormLayout(settings => {
        settings.Name = "demoOptions";
        settings.RequiredMarkDisplayMode = RequiredMarkMode.None;

        settings.Items.AddGroupItem(g => {
            g.Caption = "Pager settings";

            g.Items.Add(i => i.Position);
            g.Items.Add(i => i.ShowDisabledButtons);
            g.Items.Add(i => i.PageSizeItemPosition);
            g.Items.Add(i => i.ShowNumericButtons);
            g.Items.Add(i => i.ShowPageSizeItem);
            g.Items.Add(i => i.ShowSeparators);
            g.Items.Add(i => i.ShowSummary);
        });
        DemoHelper.Instance.PrepareControlOptions(settings, new MvcControlOptionsSettings {
            ColumnMinWidth = 480,
            ColumnCountMode = RecalculateColumnCountMode.ChildGroups
        });
    }).GetHtml()
    <div class="apply-button-container">
        @Html.DevExpress().Button(s => {
           s.Name = "ApplyButton";
           s.Text = "Apply";
           s.Theme = "MaterialCompactOrange";
           s.UseSubmitBehavior = true;
       }).GetHtml()
    </div>
}